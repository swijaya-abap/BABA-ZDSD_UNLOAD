<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="DamageDialog" resizable="false" contentWidth="auto" draggable="true">
		<Input id="DamageMaterial" value="{Damage>/matnr}" editable="false"/>
		<Input id="DamageDescription" value="{Damage>/maktx}" editable="false"/>
		<Label text="Quantity" required="true"/>
		<Input id="DamageQty" value="{Damage>/qty}" type="Number" liveChange="onDamageQtyLiveChange"/>
		<Label text="Reason" required="true"/>
		<ComboBox id="DamageChgReas" items="{ path: 'Damage>/damageReason' }" width="100%">
			<core:Item key="{Damage>COCI_REASON}" text="{Damage>COCI_REASON} - {Damage>COCI_RSN_TXT}"/>
		</ComboBox>
		<beginButton>
			<Button text="OK" press="onDamageOk"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onDamageCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>