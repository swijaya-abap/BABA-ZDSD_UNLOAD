<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="ChgReasDialog" resizable="false" contentWidth="auto" draggable="true">
		<Input id="CrdMaterial" value="{Crd>/matnr}" editable="false"/>
		<Input id="CrdDescription" value="{Crd>/maktx}" editable="false"/>
		<Label text="Quantity"/>
		<Input id="CrdQty" value="{Crd>/qty}" type="Number" liveChange="onCrdQtyLiveChange"/>
		<Label text="Return Reason" required="true"/>
		<ComboBox id="CrdChgReas" items="{ path: 'Crd>/crdChgReas' }" width="100%">
			<core:Item key="{Crd>CHG_REASON}" text="{Crd>CHG_REASON} - {Crd>CHG_REASON_TXT}"/>
		</ComboBox>
		<beginButton>
			<Button id="CrdOk" text="OK" press="onCrdOk"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCrdCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>