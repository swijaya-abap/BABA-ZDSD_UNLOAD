<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="OpenBoxDialog" resizable="false" contentWidth="auto" draggable="true">
		<Input id="ObdMaterial" value="{OpenBoxDialog>/matnr}" editable="false"/>
		<Input id="ObdDescription" value="{OpenBoxDialog>/maktx}" editable="false"/>
		<Label text="Quantity"/>
		<Input id="ObdQty" type="Number" liveChange="onObdQtyLiveChange"/>
		<beginButton>
			<Button id="ObdOk" text="OK" press="onObdOk"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onObdCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>